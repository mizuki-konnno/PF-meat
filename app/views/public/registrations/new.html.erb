<div class = "container">
  <div class = "row">
    <div class = "col text-center">
      <h2>Sign up</h2>
    </div>
  </div>
  <div class = "row">
    <div class = "col-9 mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  　　<%= render "public/shared/error_messages", resource: resource %>
      <table class = "table">
        <tr>
          <td>名前</td>
          <td class = "text-right"><%= f.label :first_name, "（姓）" %></td>
          <td><%= f.text_field :first_name, autofocus: true, class: 'form-control' %></td>
          <td class = "text-right"><%= f.label :last_name, "（名）" %></td>
          <td><%= f.text_field :last_name, autofocus: true, class: 'form-control' %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td class = "text-right"><%= f.label :first_name_kana, "（セイ）"%></td>
          <td><%= f.text_field :first_name_kana, autofocus: true, class: 'form-control' %></td>
          <td class = "text-right"><%= f.label :last_name_kana, "（メイ）" %></td>
          <td><%= f.text_field :last_name_kana, autofocus: true, class: 'form-control' %></td>
        </tr>
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %></td>
          <td colspan = "2"></td>
        </tr>
        <tr>
          <td><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></td>
          <td></td>
          <td><%= f.text_field  :postal_code , class: 'form-control'%></td>
          <td colspan = "2"></td>
        </tr>
        <tr>
          <td><%= f.label :address, "住所" %></td>
          <td></td>
          <td colspan = "3"><%= f.text_field :address, class: 'form-control' %></td>
        </tr>
        <tr>
          <td><%= f.label :telephone_number, "電話番号" %></td>
          <td></td>
          <td><%= f.text_field  :telephone_number, class: 'form-control' %></td>
          <td colspan = "2"></td>
        </tr>
        <tr>
          <td><%= f.label :password, "パスワード（6文字以上）" %></td>
          <td></td>
          <td><%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %></td>
          <td colspan = "2"></td>
        </tr>
        <tr>
          <td><%= f.label :password_confirmation, "パスワード（確認用）" %></td>
          <td></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %></td>
          <td colspan = "2"></td>
        </tr>
      </table>
        <div class="actions text-center">
    　　　　<%= f.submit "Sign up" %>
  　　　　</div>
　　　<% end %>
    </div>
  </div>
  <%= render "public/shared/links" %>
</div>


