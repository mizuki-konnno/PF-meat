<div class = "container">
  <div class = "row">
    <div class = "col">
      <h1>ジャンル一覧・追加</h1>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
      <table class = "table">
        <tr>
          <%= form_with model: @genres, url: admin_genres_path, local:true do |f| %>
          <td><%= f.label :name, "ジャンル名" %></td>
          <td><%= f.text_field :name,  class: 'form-control' %></td>
          <td><%= f.submit "新規登録", class: "btn btn-success btn-lg"%></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
      <table class = "table">
        <tr>
          <td>ジャンル</td>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to edit_admins_genre_path(genre),class: "col-sm-12 btn btn-outline-secondary btn-block" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

