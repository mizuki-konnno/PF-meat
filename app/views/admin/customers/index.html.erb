<div class='container'>
  <div class = "row">
    <div class = "col text-center my-5">
      <h2>会員一覧</h2>
    </div>
  </div>
  <div class='row'>
    <div class='col-9 mx-auto'>
      <table class='table mb-5'>
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.full_neam, admins_customer_path(customer) %></td>
            <td><%= customer.email %></td>
            <td><%= customer.users_srarus %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>