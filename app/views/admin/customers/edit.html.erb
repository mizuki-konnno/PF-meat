<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0 mx-auto">
     <h2 class='my-5 text-center'><%= @customer.full_name%>さんの会員情報編集</h2>
      <%= form_with model:@customer, url: admin_customer_path(@customer), local:true do |f| %>

        <div class="form-group row my-3">
         <div class="col-sm-4"><label>会員ID</label></div>
         <div class="col-sm-4"><%= @customer.id%></div>
         <div class="col-sm-4"></div>
        </div>

        <div class="form-group row my-3">
         <div class="col-sm-4"><label>氏名</label></div>
         <div class="col-sm-4"><%= f.text_field :last_name,  class: 'form-control' %></div>
         <div class="col-sm-4"><%= f.text_field :first_name, class: 'form-control' %></div>
        </div>

        <div class="form-group row my-3">
         <div class="col-sm-4"><label>フリガナ</label></div>
         <div class="col-sm-4"><%= f.text_field :last_name_kana,  class: 'form-control' %></div>
         <div class="col-sm-4"><%= f.text_field :first_name_kana, class: 'form-control' %></div>
        </div>

        <div class="form-group row my-3">
         <div class="col-sm-4"><label>郵便番号</label></div>
         <div class="col-sm-4"><%= f.text_field :postal_code,  class: 'form-control' %></div>
         <div class="col-sm-4"></div>
        </div>

        <div class="form-group row my-3">
         <div class="col-sm-4"><label>住所</label></div>
         <div class="col-sm-8"><%= f.text_field :address,  class: 'form-control' %></div>
        </div>

        <div class="form-group row my-3">
         <div class="col-sm-4"><label>電話番号</label></div>
         <div class="col-sm-4"><%= f.text_field :telephone_number,  class: 'form-control' %></div>
         <div class="col-sm-4"></div>
        </div>

        <div class="form-group row my-3">
         <div class="col-sm-4"><label>メールアドレス</label></div>
         <div class="col-sm-4"><%= f.text_field :email,  class: 'form-control' %></div>
         <div class="col-sm-4"></div>
        </div>

        <div class="form-group row my-3">
          <div class="col-sm-4"><label>会員ステータス</label></div>
          <div class="col-sm-4">
            <div class="radio-inline">
             <%= f.radio_button :is_active, :ture %>
             <%= f.label :有効, class: "users_srarus_label" %>
          </div>
        </div>

          <div class="col-sm-4">
           <div class="radio-inline">
           <%= f.radio_button :is_active, :false %>
           <%= f.label :退会, class: "users_srarus_label" %>
           </div>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-4"></div>
          <div class="col-sm-4"><%= f.submit "変更を保存", class: 'btn btn-success my-5' %></div>
          <div class="col-sm-4"><img src="/assets/IMG_9623.JPG" alt="" class='container-fluid mb-5'></div>
        </div>
      <% end %>
  </div>
</div>
