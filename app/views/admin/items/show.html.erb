<div class = "container">
  <div class = "row">
    <div class = "col text-center">
      <h1>商品詳細</h1>
    </div>
  </div>
  <div class = "row">
    <div class = "col text-center my-5">
      <%= link_to "編集", edit_admin_item_path(@item), class: "btn btn-outline-secondary" %>
    </div>
  </div>
  <div class = "row">
    <div class = "col-3 mx-auto">
      <%= attachment_image_tag @item, :image, fallback:  "no_image.jpg", :size =>'200x200', class: 'image' %>
    </div>
    <div class = "col-7 text-center mx-auto">
      <table class = "table">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格</td>
          <td><%= @item.price %></td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td><%= @item.is_active %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
