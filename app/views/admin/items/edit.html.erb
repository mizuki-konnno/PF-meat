<div class = "container">
  <div class = "row">
    <div class = "col text-center my-5">
     <h1>商品編集</h1>
    </div>
  </div>
  <div class = "row" >
    <div class = "col-8 mx-auto">
      <%= form_with model: @item, url: admin_item_path(@item), local:true do |f| %>
      <table class ="table">
        <tr>
          <td><%= f.label :image, "画像" %></td>
          <td><%= f.attachment_field :image, placeholder: "商品画像" %></td>
        </tr>
        <tr>
          <td><%= f.label :name, "商品名" %></td>
          <td><%= f.text_field :name,  class: 'form-control' %></td>
        </tr>
        <tr>
          <td><%= f.label :introduction, "商品説明" %></td>
          <td><%= f.text_area :introduction, rows: 3, class: 'form-control' %></td>
        </tr>
        <tr>
          <td><%= f.label :genre_id, "ジャンル" %></td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
        </tr>
        <tr>
          <td><%= f.label :price, "税抜価格" %></td>
          <td><%= f.text_field :price,  class: 'form-control' %></td>
        </tr>
        <tr>
          <td><%= f.label :sales_status, "販売ステータス" %></td>
          <td class="select_field">
						<%= f.radio_button :is_active, '販売中' %>
						<%= f.label :is_active, "販売中", class: "text-active" %>
						<%= f.radio_button :is_active, '販売停止中' %>
						<%= f.label :is_active, "販売停止中", class: "text-invalid" %>
					</td>
        </tr>
      </table>
       <div class = "col-12 text-center my-5">
         <%= f.submit "商品編集", class: "btn btn-link btn-lg "%>
        </div>
     <% end %>
    </div>
  </div>
</div>
